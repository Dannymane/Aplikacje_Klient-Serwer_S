@using Microsoft.AspNetCore.Mvc.Localization;
@using SchoolRegister.Model.DataModels;
@inject IViewLocalizer Localizer
@model SchoolRegister.ViewModels.VM.AddGradeToStudentVm

@{
    ViewData["Title"] = Localizer["AddGradeToStudent"];
}

<h1>AddGradeToStudent</h1>

<h4>AddGradeToStudentVm</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddGradeToStudent">
            @Html.AntiForgeryToken()
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input asp-for="StudentId" type="hidden" class="form-control" />
            </div>
            <div class="form-group">
                <input asp-for="TeacherId" type="hidden" class="form-control" />
            </div>
            <div class="form-group">
                <input asp-for="DateOfIssue" type="hidden" class="form-control" />
            </div>
@*            <div class="form-group">
                <label asp-for="DateOfIssue" class="control-label"></label>
                <input asp-for="DateOfIssue" class="form-control" />
                <span asp-validation-for="DateOfIssue" class="text-danger"></span>
            </div>*@
            <div class="form-group">
                <label asp-for="GradeValue" class="control-label"></label>
                <select asp-for="GradeValue" class="form-control"
                        asp-items="@Html.GetEnumSelectList<GradeScale>()"></select>
                <span asp-validation-for="GradeValue" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">@Localizer["Subject"]</label>
                <select asp-for="SubjectId" class="form-control"
                        asp-items="@ViewBag.SubjectsSelectList"></select>
                <span asp-validation-for="SubjectId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="@Localizer["Add"]" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">@Localizer["BackToTheList"]</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
