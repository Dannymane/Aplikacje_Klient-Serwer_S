@model SchoolRegister.ViewModels.VM.GradesReportVm

@{
    ViewData["Title"] = "GetGradesReport";
}

<h1>GetGradesReport</h1>

<div>
    <h4>GradesReportVm</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Student
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.StudentFullName)
        </dd>
        <dt class = "col-sm-2">
            Id
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.StudentId)
        </dd>
    </dl>
    <table class="table">
        <thead>
            <tr>
                <th>
                    Subject
                </th>
                <th>
                    Grade
                </th>
                <th>
                    Date of issue
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Grades) {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.SubjectName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.GradeValue)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DateOfIssue)
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
<div>
